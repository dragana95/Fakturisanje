@model Fakturisanje.Models.Faktura

@{
    ViewBag.Title = "Details";
}

<h2>Detalji</h2>

<div>
    <h4>Faktura</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BrojFakture)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BrojFakture)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatumFakture)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatumFakture)
        </dd>

        <h4></h4>
        <dd>
            <table class="table">
                <tr>
                    <th>Redni broj</th>
                    <th>Kolicina</th>
                    <th>Cena</th>
                    <th>Ukupno</th>
                </tr>
                @foreach (var item in Model.S)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Key)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.Item1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.Item2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.Item3)
                    </td>
                </tr>
                }



            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Povratak na listu", "Index")
</p>
